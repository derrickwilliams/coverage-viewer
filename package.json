{
  "name": "coverage-viewer",
  "description": "Create a static website for exploring your projectâ€™s coverage statistics",
  "version": "0.4.0",
  "author": {
    "name": "Forrest Desjardins",
    "email": "desjardinsfg@gmail.com",
    "url": "github.com/fdesjardins"
  },
  "bin": "cli.js",
  "dependencies": {
    "array.prototype.flatten": "^1.2.1",
    "color-interpolate": "^1.0.4",
    "express": "^4.16.4",
    "mkdirp": "^0.5.1",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">=7"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "func-style": [
        2,
        "expression"
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": false
        }
      ]
    }
  },
  "keywords": [
    "coverage",
    "html",
    "json",
    "report",
    "server",
    "viewer"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "repository": "fdesjardins/coverage-viewer",
  "scripts": {
    "test": "standard *.js && nyc mocha \"./test/**/*-spec.js\""
  }
}
